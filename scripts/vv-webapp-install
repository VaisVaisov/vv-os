#!/bin/zsh

# Установка webapp - создание .desktop файла
# Адаптировано из Omarchy для VV Shell

if [ "$#" -lt 3 ]; then
  # Интерактивный режим
  echo -e "\e[32mСоздание нового webapp для запуска через лаунчер.\n\e[0m"

  if ! command -v gum &>/dev/null; then
    echo "Требуется gum для интерактивного режима."
    echo "Установите: sudo pacman -S gum"
    echo "Или используйте: $0 NAME URL ICON_URL [CUSTOM_EXEC] [MIME_TYPES]"
    exit 1
  fi

  APP_NAME=$(gum input --prompt "Название> " --placeholder "Мой webapp")
  APP_URL=$(gum input --prompt "URL> " --placeholder "https://example.com")
  ICON_REF=$(gum input --prompt "URL иконки> " --placeholder "https://dashboardicons.com (только PNG!)")
  CUSTOM_EXEC=""
  MIME_TYPES=""
  INTERACTIVE_MODE=true
else
  APP_NAME="$1"
  APP_URL="$2"
  ICON_REF="$3"
  CUSTOM_EXEC="$4"  # Опционально
  MIME_TYPES="$5"   # Опционально
  INTERACTIVE_MODE=false
fi

# Валидация
if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_REF" ]]; then
  echo "Ошибка: необходимо указать название, URL и иконку!"
  exit 1
fi

# Иконка - локальная или скачиваем
ICON_DIR="$HOME/.local/share/applications/icons"
mkdir -p "$ICON_DIR"

if [[ $ICON_REF =~ ^https?:// ]]; then
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
  if curl -sL -o "$ICON_PATH" "$ICON_REF"; then
    echo "✓ Иконка скачана: $ICON_PATH"
  else
    echo "Ошибка: не удалось скачать иконку."
    exit 1
  fi
else
  ICON_PATH="$ICON_DIR/$ICON_REF"
fi

# Команда запуска
if [[ -n $CUSTOM_EXEC ]]; then
  EXEC_COMMAND="$CUSTOM_EXEC"
else
  EXEC_COMMAND="vv-launch-webapp $APP_URL"
fi

# Создаем .desktop файл
DESKTOP_FILE="$HOME/.local/share/applications/$APP_NAME.desktop"

cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME
Exec=$EXEC_COMMAND
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
EOF

# MIME types
if [[ -n $MIME_TYPES ]]; then
  echo "MimeType=$MIME_TYPES" >>"$DESKTOP_FILE"
fi

chmod +x "$DESKTOP_FILE"

if [[ $INTERACTIVE_MODE == true ]]; then
  echo -e "\n✓ $APP_NAME готов! Найдете в лаунчере (SUPER + SPACE)\n"
else
  echo "✓ $APP_NAME установлен"
fi
