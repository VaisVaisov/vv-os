#!/bin/zsh

# TUI Install - create .desktop file for TUI application
# Adapted from Omarchy for VV Shell

if [ "$#" -ne 4 ]; then
  # Интерактивный режим
  echo -e "\e[32mСоздание TUI ярлыка для запуска через лаунчер.\n\e[0m"

  if ! command -v gum &>/dev/null; then
    echo "Требуется gum для интерактивного режима."
    echo "Установите: sudo pacman -S gum"
    echo "Или используйте: $0 NAME COMMAND WINDOW_STYLE ICON_URL"
    exit 1
  fi

  APP_NAME=$(gum input --prompt "Название> " --placeholder "Мой TUI")
  APP_EXEC=$(gum input --prompt "Команда> " --placeholder "lazydocker или bash -c 'dust; read -n 1 -s'")
  WINDOW_STYLE=$(gum choose --header "Стиль окна" float tile)
  ICON_URL=$(gum input --prompt "URL иконки> " --placeholder "https://dashboardicons.com (PNG или SVG!)")
else
  APP_NAME="$1"
  APP_EXEC="$2"
  WINDOW_STYLE="$3"
  ICON_URL="$4"
fi

if [[ -z "$APP_NAME" || -z "$APP_EXEC" || -z "$ICON_URL" ]]; then
  echo "Ошибка: необходимо указать название, команду и иконку!"
  exit 1
fi

ICON_DIR="$HOME/.local/share/applications/icons"
DESKTOP_FILE="$HOME/.local/share/applications/$APP_NAME.desktop"
mkdir -p "$ICON_DIR"

# Иконка - локальная или скачиваем
if [[ ! "$ICON_URL" =~ ^https?:// ]] && [ -f "$ICON_URL" ]; then
  ICON_PATH="$ICON_URL"
else
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
  if ! curl -sL -o "$ICON_PATH" "$ICON_URL"; then
    echo "Ошибка: не удалось скачать иконку."
    exit 1
  fi
  echo "✓ Иконка скачана: $ICON_PATH"
fi

# APP_CLASS для Hyprland window rules
if [[ $WINDOW_STYLE == "float" ]]; then
  APP_CLASS="TUI.float"
else
  APP_CLASS="TUI.tile"
fi

# Создаем .desktop файл
cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME
Exec=foot --app-id=$APP_CLASS -e $APP_EXEC
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
EOF

chmod +x "$DESKTOP_FILE"

if [ "$#" -ne 4 ]; then
  echo -e "\n✓ $APP_NAME готов! Найдете в лаунчере (SUPER + SPACE)\n"
else
  echo "✓ $APP_NAME установлен"
fi
