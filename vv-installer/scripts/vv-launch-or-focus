#!/bin/zsh

# Базовый скрипт для запуска приложения или фокусировки на существующем окне
# Адаптировано из Omarchy для VV Shell

if (($# == 0)); then
  echo "Usage: vv-launch-or-focus [window-pattern] [launch-command]"
  exit 1
fi

WINDOW_PATTERN="$1"
LAUNCH_COMMAND="${2:-"$WINDOW_PATTERN"}"

# Ищем окно по pattern в class или title
WINDOW_ADDRESS=$(hyprctl clients -j | jq -r --arg p "$WINDOW_PATTERN" \
  '.[]|select((.class|test("\\b" + $p + "\\b";"i")) or (.title|test("\\b" + $p + "\\b";"i")))|.address' \
  | head -n1)

if [[ -n $WINDOW_ADDRESS ]]; then
  # Окно найдено - фокусируемся
  hyprctl dispatch focuswindow "address:$WINDOW_ADDRESS"
else
  # Окно не найдено - запускаем
  eval exec setsid $LAUNCH_COMMAND
fi
